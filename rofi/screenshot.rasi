/*****----- Configuration -----*****/
configuration {
    show-icons:                 false;
}

/*****----- Global Properties -----*****/
@import "simple-menu.rasi"

/* Ajuste específico para Screenshot */
listview {
    lines:                       4;
}

element-text {
    /* Fonte maior para o menu de screenshot (Destaque) */
    /* Usando a mesma família da global, mas tamanho maior */
    font:                        "JetBrains Mono Nerd Font 18";
    horizontal-align:            0.5;
}
